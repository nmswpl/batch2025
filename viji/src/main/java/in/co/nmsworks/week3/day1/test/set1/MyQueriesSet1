1. alter table SOCIAL_MEDIA add email varchar(100);
   update SOCIAL_MEDIA set email = concat(username,"@example.com");

2. alter table SOCIAL_MEDIA modify location varchar(50);

3. select * from SOCIAL_MEDIA where followers_count > 50000 and (location="Mumbai" or location = "Delhi");

4. select * from SOCIAL_MEDIA where (followers_count > 10000 or following_count > 5000 ) and (location = "Bangalore" or location = "Chennai");

5. select location , gender , avg(followers_count) from SOCIAL_MEDIA
   group by location , gender
   orderby location ;