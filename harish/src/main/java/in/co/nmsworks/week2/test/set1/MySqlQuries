
1.alter table SOCIAL_MEDIA modify location VARCHAR(50);
1.update SOCIAL_MEDIA set email = concat(username,'@example.com');
2.alter table  SOCIAL_MEDIA add email varchar(100);
3. Select * from SOCIAL_MEDIA where followers_count > 50000 and location in('Mumbai','Delhi');
4.Select * from SOCIAL_MEDIA where (followers_count > 10000 or following_count > 5000) and location in('Bangalore','Chennai');
5. select location, gender,avg(followers_count) AS Average_followers from SOCIAL_MEDIA group by location , gender order by location;

